@using MongoDB.Driver
@using MyMusicTaste.Database
@using MyMusicTaste.Database.Models

<EditForm Model="_model" OnValidSubmit="SubmitAsync" FormName="NewSong">
    <DataAnnotationsValidator/>
    <label>
        Title:
        <InputText @bind-Value="_model.Title"/>
    </label>
    <label>
        Author:
        <InputText @bind-Value="_model.Author"/>
    </label>
    <button type="submit">Submit</button>
</EditForm>

@if (_submitted) 
{
    <p>Submitted!</p>
    <p>@_model.Title</p>
}

@if (_alreadyExists)
{
    <p>Song with this Title and Author already exists in the database.</p>
}